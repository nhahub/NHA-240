@model Estately.Services.ViewModels.ApplicationUserViewModel

@{
    ViewData["Title"] = "Edit User";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="table-container">
    <h4>Edit User</h4>

    <form asp-action="Edit" method="post" class="mt-4">
        <input type="hidden" asp-for="Id" />

        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

        <div class="row">
            <div class="col-md-6 mb-3">
                <label>Username</label>
                <input asp-for="UserName" class="form-control" readonly />
                <span asp-validation-for="UserName" class="text-danger"></span>
            </div>

            <div class="col-md-6 mb-3">
                <label>Email</label>
                <input asp-for="Email" class="form-control" readonly />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <div class="col-md-6 mb-3">
                <label>User Type</label>
                <select asp-for="UserTypeID" class="form-control"
                        asp-items="@(new SelectList(Model.UserTypes, "UserTypeID", "UserTypeName"))">
                    <option value="">-- Select User Type --</option>
                </select>
                <span asp-validation-for="UserTypeID" class="text-danger"></span>
            </div>

            <div class="col-md-6 mb-3">
                <label>Created At</label>
                <input asp-for="CreatedAt" class="form-control" readonly />
            </div>
        </div>

        <div class="mt-4">
            <button class="btn btn-admin">
                <i class="bi bi-save me-2"></i>Save Changes
            </button>
            <a asp-action="Index" class="btn btn-secondary">
                <i class="bi bi-arrow-left-circle me-2"></i>Back to List
            </a>
        </div>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

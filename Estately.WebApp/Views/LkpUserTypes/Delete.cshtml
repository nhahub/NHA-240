@model Estately.Services.ViewModels.UserTypeViewModel

@{
    ViewData["Title"] = "Delete User Type";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="table-container">
    <h4 class="text-danger">
        <i class="bi bi-exclamation-triangle me-2"></i>Delete User Type
    </h4>

    <div class="alert alert-danger">
        <strong>Are you sure you want to delete this user type?</strong>
    </div>

    <div class="details-table p-3 mb-4">
        <table class="table table-bordered mb-0">
            <tr><th>Name</th><td>@Model.UserTypeName</td></tr>
            <tr><th>Description</th><td>@Model.Description</td></tr>
        </table>
    </div>

    <form asp-action="Delete" method="post">
        <input type="hidden" asp-for="UserTypeID" />

        <button type="submit" class="btn btn-delete">
            <i class="bi bi-trash me-2"></i>Delete
        </button>

        <a asp-action="Index" class="btn btn-secondary ms-2">
            <i class="bi bi-arrow-left-circle me-2"></i>Cancel
        </a>
    </form>
</div>

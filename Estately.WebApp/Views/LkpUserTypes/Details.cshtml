@model Estately.Services.ViewModels.UserTypeViewModel

@{
    ViewData["Title"] = "User Type Details";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h4>User Type Details</h4>

<div class="details-table p-4">
    <table class="table table-bordered mb-0">
        <tr><th>User Type ID</th><td>@Model.UserTypeID</td></tr>
        <tr><th>Name</th><td>@Model.UserTypeName</td></tr>
        <tr><th>Description</th><td>@Model.Description</td></tr>
    </table>

    <div class="mt-4">
        <a asp-action="Edit" asp-route-id="@Model.UserTypeID" class="btn btn-admin">
            <i class="bi bi-pencil me-1"></i>Edit
        </a>
        <a asp-action="Index" class="btn btn-secondary ms-2">
            <i class="bi bi-arrow-left-circle me-1"></i>Back
        </a>
    </div>
</div>

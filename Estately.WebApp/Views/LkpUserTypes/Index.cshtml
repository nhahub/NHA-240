@model Estately.Services.ViewModels.UserTypeListViewModel

@{
    ViewData["Title"] = "User Types Management";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h4>User Types</h4>
    <a asp-action="Create" class="btn btn-admin">
        <i class="bi bi-plus-circle me-2"></i>Add New User Type
    </a>
</div>

<form method="get" class="mb-4">
    <div class="row">
        <div class="col-md-10">
            <input type="text" name="search" class="form-control"
                   placeholder="Search user type..."
                   value="@Model.SearchTerm" />
        </div>
        <div class="col-md-2">
            <button type="submit" class="btn btn-admin w-100">Search</button>
        </div>
    </div>
</form>

<div class="table-container p-3">
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>UserTypeID</th>
                <th>Name</th>
                <th>Description</th>
                <th class="text-center">Actions</th>
            </tr>
        </thead>

        <tbody>
            @foreach (var type in Model.UserTypes)
            {
                <tr>
                    <td>@type.UserTypeID</td>
                    <td>@type.UserTypeName</td>
                    <td>@type.Description</td>

                    <td class="text-center">
                        <a asp-action="Edit" asp-route-id="@type.UserTypeID"
                           class="btn btn-edit btn-sm">Edit</a>

                        <a asp-action="Details" asp-route-id="@type.UserTypeID"
                           class="btn btn-details btn-sm">Details</a>

                        <a asp-action="Delete" asp-route-id="@type.UserTypeID"
                           class="btn btn-delete btn-sm">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

@if (Model.TotalPages > 0)
{
    <div class="row">
        <div class="custom-pagination-container">
            <div class="custom-pagination">

                <!-- Prev -->
                @if (Model.Page > 1)
                {
                    <a asp-action="Index"
                       asp-route-page="@(Model.Page - 1)"
                       asp-route-pageSize="@Model.PageSize"
                       asp-route-search="@Model.SearchTerm"
                       class="page-btn">Prev</a>
                }
                else
                {
                    <span class="page-btn disabled">Prev</span>
                }

                <!-- Page Numbers -->
                @for (int i = 1; i <= Model.TotalPages; i++)
                {
                    <a asp-action="Index"
                       asp-route-page="@i"
                       asp-route-pageSize="@Model.PageSize"
                       asp-route-search="@Model.SearchTerm"
                       class="page-btn @(i == Model.Page ? "active" : "")">@i</a>
                }

                <!-- Next -->
                @if (Model.Page < Model.TotalPages)
                {
                    <a asp-action="Index"
                       asp-route-page="@(Model.Page + 1)"
                       asp-route-pageSize="@Model.PageSize"
                       asp-route-search="@Model.SearchTerm"
                       class="page-btn">Next</a>
                }
                else
                {
                    <span class="page-btn disabled">Next</span>
                }
            </div>
        </div>
    </div>
}

@model Estately.Services.ViewModels.EmployeesViewModel

@{
    ViewData["Title"] = "Delete Employee";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="table-container">
    <h4 class="text-danger">
        <i class="bi bi-exclamation-triangle me-2"></i> Delete Employee
    </h4>

    <div class="alert alert-danger">
        <strong>Are you sure you want to delete this employee?</strong>
    </div>

    <div class="details-table mb-4 p-3">
        <table class="table table-bordered mb-0">
            <tr><th>Full Name</th><td>@Model.FullName</td></tr>
            <tr><th>Job Title</th><td>@Model.JobTitleName</td></tr>
            <tr><th>Department</th><td>@Model.DepartmentName</td></tr>
            <tr><th>Phone</th><td>@Model.Phone</td></tr>
        </table>
    </div>

    <form asp-action="Delete" method="post">
        <input type="hidden" asp-for="EmployeeID" />

        <button type="submit" class="btn btn-delete">
            <i class="bi bi-trash me-2"></i>Delete
        </button>

        <a asp-action="Index" class="btn btn-secondary ms-2">
            <i class="bi bi-arrow-left-circle me-2"></i>Cancel
        </a>
    </form>

</div>
@model Estately.Services.ViewModels.EmployeesViewModel

@{
    ViewData["Title"] = "Edit Employee";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="table-container">
    <h4>Edit Employee</h4>

    <form asp-action="Edit" method="post" class="mt-4">

        <input type="hidden" asp-for="EmployeeID" />

        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

        <div class="row">

            <div class="col-md-6 mb-3">
                <label>User (Login Email)</label>
                <input asp-for="Email" class="form-control"/>
            </div>

            <div class="col-md-6 mb-3">
                <label>First Name</label>
                <input asp-for="FirstName" class="form-control"/>
                <span asp-validation-for="FirstName" class="text-danger"></span>
            </div>

            <div class="col-md-6 mb-3">
                <label>Last Name</label>
                <input asp-for="LastName" class="form-control" />
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>

            <div class="col-md-6 mb-3">
                <label>Phone</label>
                <input asp-for="Phone" class="form-control"/>
                <span asp-validation-for="Phone" class="text-danger"></span>
            </div>

            <div class="col-md-6 mb-3">
                <label>National ID</label>
                <input asp-for="Nationalid" class="form-control"/>
                <span asp-validation-for="Nationalid" class="text-danger"></span>
            </div>

            <div class="col-md-4 mb-3">
                <label>Gender</label>
                <input asp-for="Gender" class="form-control"/>
                <span asp-validation-for="Gender" class="text-danger"></span>
            </div>

            <div class="col-md-4 mb-3">
                <label>Age</label>
                <input asp-for="Age" class="form-control"/>
                <span asp-validation-for="Age" class="text-danger"></span>
            </div>

            <div class="col-md-4 mb-3">
                <label>Salary</label>
                <input asp-for="Salary" class="form-control" />
                <span asp-validation-for="Salary" class="text-danger"></span>
            </div>

            <div class="col-md-6 mb-3">
                <label>Job Title</label>
                <input class="form-control" value="@Model.JobTitleName" />
                <input type="hidden" asp-for="JobTitleId" />
                <span asp-validation-for="JobTitleId" class="text-danger"></span>
            </div>

            <div class="col-md-6 mb-3">
                <label>Branch</label>
                <select asp-for="BranchDepartmentId" class="form-control"
                        asp-items="@(new SelectList(Model.Branches, "BranchID", "BranchName"))">
                </select>
                <span asp-validation-for="BranchDepartmentId" class="text-danger"></span>
            </div>

            <div class="col-md-6 mb-3">
                <label>Department</label>
                <select asp-for="BranchDepartmentId" class="form-control"
                        asp-items="@(new SelectList(Model.Departments, "DepartmentID", "DepartmentName"))">
                </select>
                <span asp-validation-for="BranchDepartmentId" class="text-danger"></span>
            </div>

            <div class="col-md-6 mb-3">
                <label>Manager (Reports To)</label>
                <select asp-for="ReportsTo" class="form-control"
                        asp-items="@(new SelectList(Model.Managers, "EmployeeID", "FullName"))">
                    <option value="">-- None --</option>
                </select>
                <span asp-validation-for="ReportsTo" class="text-danger"></span>
            </div>

        </div>

        <div class="mt-4">
            <button class="btn btn-admin">
                <i class="bi bi-save me-2"></i>Save Changes
            </button>
            <a asp-action="Index" class="btn btn-secondary">
                <i class="bi bi-arrow-left-circle me-2"></i>Back to List
            </a>
        </div>

    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
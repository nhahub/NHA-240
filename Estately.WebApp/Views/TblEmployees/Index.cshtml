@model Estately.Services.ViewModels.EmployeesListViewModel

@{
    ViewData["Title"] = "Employees Management";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="table-container">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h4>Employees</h4>
    </div>

    <form method="get" class="mb-4">
        <div class="row">
            <div class="col-md-10">
                <input type="text" name="search" class="form-control"
                       placeholder="Search employee..."
                       value="@Model.SearchTerm" />
            </div>
            <div class="col-md-2">
                <button type="submit" class="btn btn-admin w-100">Search</button>
            </div>
        </div>
    </form>

    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>ID</th>
                <th>Full Name</th>
                <th>Job Title</th>
                <th>Branch</th>
                <th>Department</th>
                <th>Phone</th>
                <th>Email</th>
                <th>Actions</th>
            </tr>
        </thead>

        <tbody>
            @foreach (var e in Model.Employees)
            {
                <tr>
                    <td>@e.EmployeeID</td>
                    <td>@e.FullName</td>
                    <td>@e.JobTitleName</td>
                    <td>@e.BranchName</td>
                    <td>@e.DepartmentName</td>
                    <td>@e.Phone</td>
                    <td>@e.Email</td>

                    <td>
                        <div class="d-flex align-items-center gap-2">
                            <a asp-action="Edit" asp-route-id="@e.EmployeeID" class="btn btn-edit btn-sm">Edit</a>
                            <a asp-action="Details" asp-route-id="@e.EmployeeID" class="btn btn-details btn-sm">Details</a>

                            <form asp-action="Delete" asp-route-id="@e.EmployeeID" method="get" class="m-0 p-0 d-inline">
                                <button class="btn btn-delete btn-sm">Delete</button>
                            </form>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

@if (Model.TotalPages > 0)
{
    <div class="row">
        <div class="custom-pagination-container">
            <div class="custom-pagination">

                @if (Model.Page > 1)
                {
                    <a asp-action="Index"
                       asp-route-page="@(Model.Page - 1)"
                       asp-route-pageSize="@Model.PageSize"
                       asp-route-search="@Model.SearchTerm"
                       class="page-btn">Prev</a>
                }
                else
                {
                    <span class="page-btn disabled">Prev</span>
                }

                @for (int i = 1; i <= Model.TotalPages; i++)
                {
                    <a asp-action="Index"
                       asp-route-page="@i"
                       asp-route-pageSize="@Model.PageSize"
                       asp-route-search="@Model.SearchTerm"
                       class="page-btn @(i == Model.Page ? "active" : "")">@i</a>
                }

                @if (Model.Page < Model.TotalPages)
                {
                    <a asp-action="Index"
                       asp-route-page="@(Model.Page + 1)"
                       asp-route-pageSize="@Model.PageSize"
                       asp-route-search="@Model.SearchTerm"
                       class="page-btn">Next</a>
                }
                else
                {
                    <span class="page-btn disabled">Next</span>
                }

            </div>
        </div>
    </div>
}
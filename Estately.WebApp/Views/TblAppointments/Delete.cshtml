@model Estately.Services.ViewModels.AppointmentViewModel

@{
    ViewData["Title"] = "Delete Appointment";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h4 class="text-danger">
    <i class="bi bi-exclamation-triangle me-2"></i>Delete Appointment
</h4>

<div class="alert alert-danger">
    <strong>Are you sure you want to delete this appointment?</strong>
</div>

<div class="details-table p-3 mb-4">
    <table class="table table-bordered mb-0">
        <tr><th>Property</th><td>@Model.PropertyName</td></tr>
        <tr><th>Employee/Client</th><td>@Model.EmployeeClientName</td></tr>
        <tr><th>Appointment Date</th><td>@Model.AppointmentDate?.ToString("MM/dd/yyyy hh:mm tt")</td></tr>
        <tr><th>Status</th><td>@Model.StatusName</td></tr>
    </table>
</div>

<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="AppointmentID" />

    <button type="submit" class="btn btn-delete">
        <i class="bi bi-trash me-2"></i>Delete
    </button>

    <a asp-action="Index" class="btn btn-secondary ms-2">
        <i class="bi bi-arrow-left-circle me-2"></i>Cancel
    </a>
</form>
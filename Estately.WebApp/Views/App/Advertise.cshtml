                 data-aos="fade-up"
                 data-aos-delay="200">
                <div class="h-100 p-4 bg-white position-relative"
                     style="border-radius: 12px; box-shadow: 0 5px 20px rgba(1, 92, 154, 0.3); border: 2px solid #015c9a;">
                    <span class="badge bg-primary position-absolute top-0 end-0 m-3">Popular</span>
                    <div class="text-center mb-3">
                        <div class="wrap-icon mb-3 mx-auto d-flex align-items-center justify-content-center"
                             style="width: 80px; height: 80px; background: #015c9a; border-radius: 50%;">
                            <i class="bi bi-megaphone-fill" style="font-size: 36px; color: white"></i>
                        </div>
                        <h3 class="heading header-Text mb-3">Sponsored Content</h3>
                    </div>

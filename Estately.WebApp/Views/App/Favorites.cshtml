@model List<Estately.Services.ViewModels.PropertyViewModel>

@{
    ViewData["Title"] = "My Favorites | Estately";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    .property-img-wrapper {
        width: 100%;
        height: 350px;
        overflow: hidden;
        border-radius: 4px;
    }

    .property-img {
        width: 100%;
        height: 100%;
        object-fit: cover;
    }

    .property-actions {
        display: flex;
        flex-wrap: wrap;
        gap: 8px;
        align-items: center;
    }

    .property-actions .btn {
        flex: 1 1 auto;
        min-width: 120px;
    }

    /* Mobile (phones, 576px and down) */
    @@media (max-width: 576px) {
        .property-img-wrapper {
            height: 260px;
        }

        .property-actions {
            flex-direction: column;
            width: 100%;
        }

        .property-actions .btn {
            width: 100%;
            min-width: unset;
        }

        .specs {
            flex-wrap: wrap;
            gap: 8px;
        }

        .heading {
            font-size: 24px;
        }

        .section {
            padding: 30px 0;
        }
    }

    /* Tablets (768px and down) */
    @@media (max-width: 768px) {
        .property-img-wrapper {
            height: 300px;
        }

        .property-actions .btn {
            font-size: 14px;
            padding: 8px 12px;
        }
    }

    /* Small tablets and large phones (992px and down) */
    @@media (max-width: 992px) {
        .property-content {
            padding: 15px;
        }
    }

    /* Toast notification responsive */
    @@media (max-width: 576px) {
        .position-fixed.top-0.end-0 {
            top: 10px !important;
            right: 10px !important;
            left: 10px !important;
            padding: 10px !important;
        }
    }
</style>

@if (TempData["FavoriteRemoved"] != null)
{
    <div class="position-fixed top-0 end-0 p-3" style="z-index: 1080;">
        <div class="toast show align-items-center text-bg-success border-0" role="alert" aria-live="assertive" aria-atomic="true">
            <div class="d-flex">
                <div class="toast-body">
                    @TempData["FavoriteRemoved"]
                </div>
                <button type="button" class="btn-close btn-close-white me-2 m-auto" data-bs-dismiss="toast" aria-label="Close"></button>
            </div>
        </div>
    </div>
}

<div class="hero page-inner overlay"
     style="background-image: url('@Url.Content("~/images/hero_bg_2.jpg")')">
    <div class="container">
        <div class="row justify-content-center align-items-center">
            <div class="col-lg-9 text-center mt-5">
                <h1 class="heading" data-aos="fade-up">My Favorites</h1>

                <nav aria-label="breadcrumb"
                     data-aos="fade-up"
                     data-aos-delay="200">
                    <ol class="breadcrumb text-center justify-content-center">
                        <li class="breadcrumb-item"><a asp-action="Index" asp-controller="App">Home</a></li>
                        <li class="breadcrumb-item active text-white-50"
                            aria-current="page">
                            My Favorites
                        </li>
                    </ol>
                </nav>
            </div>
        </div>
    </div>
</div>

<div id="section2" class="section">
    <div class="container">
        <div class="row mb-5">
            <div class="col-lg-8">
                <h2 class="font-weight-bold heading header-Text mb-4">
                    Your Saved Properties
                </h2>
                <p class="text-black-50">
                    Manage your favorite properties and easily access them later.
                </p>
            </div>
        </div>

        <div class="row g-3">
            @if (Model != null && Model.Any())
            {
                foreach (var property in Model)
                {
                    <div class="col-12 col-sm-6 col-md-6 col-lg-4">
                        <div class="property-item mb-30">
                            <a asp-action="PropertySingle" asp-controller="App" asp-route-id="@property.PropertyID" class="img">
                                <div class="property-img-wrapper">
                                    <img src="@Url.Content("~/" + property.FirstImage)"
                                         alt="Image" class="property-img" />
                                </div>
                            </a>

                            <div class="property-content">
                                <div class="price mb-2">
                                    <span class="header-Text">@String.Format("{0:N2}", property.Price) EGP</span>
                                </div>

                                <div>
                                    <span class="d-block mb-2 text-black-50">@property.Address</span>
                                    <span class="city d-block mb-3 main-Text">@property.CityName , @property.ZoneName</span>

                                    <div class="specs d-flex mb-4">
                                        <span class="d-block d-flex align-items-center me-3">
                                            <span class="icon-bed me-2 secondary-Text"></span>
                                            <span class="caption secondary-Text">@property.BedsNo beds</span>
                                        </span>

                                        <span class="d-block d-flex align-items-center">
                                            <span class="icon-bath me-2 secondary-Text"></span>
                                            <span class="caption secondary-Text">@property.BathsNo baths</span>
                                        </span>
                                    </div>

                                    <div class="property-actions">
                                        <a asp-action="PropertySingle" asp-controller="App" asp-route-id="@property.PropertyID"
                                           class="btn button py-2 px-3">See details</a>

                                        <form asp-action="RemoveFavorite" asp-controller="App" method="post" class="d-inline" data-preserve-scroll="true">
                                            @Html.AntiForgeryToken()
                                            <input type="hidden" name="propertyId" value="@property.PropertyID" />
                                            <button type="submit" class="btn btn-outline-danger py-2 px-3 w-100">Remove from favorites</button>
                                        </form>
                                    </div>
                                </div>
                            </div>

                        </div>
                    </div>
                }
            }
            else
            {
                <div class="col-12">
                    <div class="text-center py-5">
                        <i class="bi bi-heart" style="font-size: 48px; color: #ccc; margin-bottom: 15px;"></i>
                        <p class="text-black-50 fs-5">You have no favorite properties yet.</p>
                        <a asp-action="Properties" asp-controller="App" class="btn button mt-3">Browse Properties</a>
                    </div>
                </div>
            }
        </div>
    </div>
</div>


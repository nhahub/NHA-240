@model Estately.Services.ViewModels.PropertyStatusListViewModel

@{
    ViewData["Title"] = "Property Status Management";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="table-container">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h4>Property Statuses</h4>
        <a asp-action="Create" class="btn btn-admin">
            <i class="bi bi-plus-circle me-2"></i>Add New PropertyStatus
        </a>
    </div>

    <form method="get" class="mb-4">
        <div class="row">
            <div class="col-md-10">
                <input type="text" name="search" class="form-control" placeholder="Search by PropertyStatus or description..." value="@Model.SearchTerm" />
            </div>
            <div class="col-md-2">
                <button type="submit" class="btn btn-admin w-100">Search</button>
            </div>
        </div>
    </form>

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success">@TempData["Success"]</div>
    }

    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>Status ID</th>
                <th>Status Name</th>
                <th>Description</th>
                <th>Properties Count</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var status in Model.PropertyStatuses)
            {
                <tr>
                    <td>@status.StatusID</td>
                    <td>@status.StatusName</td>
                    <td>@status.Description</td>
                    <td>@status.PropertiesCount</td>

                    <td>
                        <a asp-action="Edit"
                           asp-route-id="@status.StatusID"
                           class="btn btn-edit btn-sm">Edit</a>

                        <a asp-action="Details"
                           asp-route-id="@status.StatusID"
                           class="btn btn-details btn-sm">Details</a>

                        <form asp-action="Delete"
                              asp-route-id="@status.StatusID"
                              method="get" style="display:inline;">
                            <button class="btn btn-delete btn-sm">Delete</button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

@if (Model.TotalPages > 0)
{
    <div class="row">
        <div class="custom-pagination-container">
            <div class="custom-pagination">

                @if (Model.Page > 1)
                {
                    <a asp-action="Index"
                       asp-route-page="@(Model.Page - 1)"
                       asp-route-pageSize="@Model.PageSize"
                       asp-route-search="@Model.SearchTerm"
                       class="page-btn">Prev</a>
                }
                else
                {
                    <span class="page-btn disabled">Prev</span>
                }

                @for (int i = 1; i <= Model.TotalPages; i++)
                {
                    <a asp-action="Index"
                       asp-route-page="@i"
                       asp-route-pageSize="@Model.PageSize"
                       asp-route-search="@Model.SearchTerm"
                       class="page-btn @(i == Model.Page ? "active" : "")">@i</a>
                }

                @if (Model.Page < Model.TotalPages)
                {
                    <a asp-action="Index"
                       asp-route-page="@(Model.Page + 1)"
                       asp-route-pageSize="@Model.PageSize"
                       asp-route-search="@Model.SearchTerm"
                       class="page-btn">Next</a>
                }
                else
                {
                    <span class="page-btn disabled">Next</span>
                }

            </div>
        </div>
    </div>
}

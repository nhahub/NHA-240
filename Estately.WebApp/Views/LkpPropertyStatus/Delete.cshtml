@model Estately.Services.ViewModels.PropertyStatusViewModel

@{
    ViewData["Title"] = "Delete Property Status";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1>Delete Property Status</h1>

<div class="alert alert-danger">
    Are you sure you want to delete this status?
</div>

<table class="table table-bordered">
    <tr>
        <th>Status ID</th>
        <td>@Model.StatusID</td>
    </tr>
    <tr>
        <th>Status Name</th>
        <td>@Model.StatusName</td>
    </tr>
    <tr>
        <th>Description</th>
        <td>@Model.Description</td>
    </tr>
    <tr>
        <th>Properties Count</th>
        <td>@Model.PropertiesCount</td>
    </tr>
</table>

<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="StatusID" />

    <button class="btn btn-danger bi bi-trash">Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>

@{
    ViewData["Title"] = "Property Types Management";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    var propertyTypes = ViewBag.PropertyTypes as List<Estately.Services.ViewModels.LkpPropertyTypeViewModel> ?? new();
}

<div class="table-container">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h4>Property Types Management</h4>
        <a asp-action="CreatePropertyType" asp-controller="Admin" class="btn btn-admin">
            <i class="bi bi-plus-circle me-2"></i>Add New Property Type
        </a>
    </div>

    <div class="table-responsive">
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Type Name</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var pt in propertyTypes)
                {
                    <tr>
                        <td>@pt.PropertyTypeID</td>
                        <td>@pt.TypeName</td>
                        <td>
                            <div class="btn-group btn-group-sm">
                                <a asp-action="EditPropertyType" asp-controller="Admin" asp-route-id="@pt.PropertyTypeID" class="btn btn-sm btn-outline-primary">
                                    <i class="bi bi-pencil"></i>
                                </a>
                                <form method="post" asp-action="DeletePropertyType" asp-controller="Admin" asp-route-id="@pt.PropertyTypeID" class="d-inline" 
                                      onsubmit="return confirm('Are you sure?');">
                                    <button type="submit" class="btn btn-sm btn-outline-danger">
                                        <i class="bi bi-trash"></i>
                                    </button>
                                </form>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>



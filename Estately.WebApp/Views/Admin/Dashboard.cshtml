@{
    ViewData["Title"] = "Dashboard";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    var stats = ViewBag.Stats;
}

<div class="row">
    <div class="col-md-3">
        <div class="stat-card">
            <h3>@stats?.TotalUsers</h3>
            <p><i class="bi bi-people me-2"></i>Total Users</p>
        </div>
    </div>

    <div class="col-md-3">
        <div class="stat-card">
            <h3>@stats?.TotalProperties</h3>
            <p><i class="bi bi-house-door me-2"></i>Total Properties</p>
        </div>
    </div>

    <div class="col-md-3">
        <div class="stat-card">
            <h3>@stats?.TotalAppointments</h3>
            <p><i class="bi bi-calendar-check me-2"></i>Appointments</p>
        </div>
    </div>

    <div class="col-md-3">
        <div class="stat-card">
            <h3>@stats?.TotalEmployees</h3>
            <p><i class="bi bi-briefcase me-2"></i>Employees</p>
        </div>
    </div>
</div>

<div class="row mt-4">
    <div class="col-md-6">
        <div class="stat-card">
            <h3>@stats?.TotalClients</h3>
            <p><i class="bi bi-person-check me-2"></i>Total Clients</p>
        </div>
    </div>

    <div class="col-md-6">
        <div class="stat-card">
            <h3>@stats?.TotalBranches</h3>
            <p><i class="bi bi-building me-2"></i>Total Branches</p>
        </div>
    </div>
</div>

<div class="row mt-4">
    <div class="col-12">
        <div class="table-container">
            <h5 class="mb-3">Quick Actions</h5>

            <div class="row">

                <div class="col-md-3 mb-3">
                    <a asp-action="Properties" asp-controller="Admin" class="btn btn-admin-outline w-100">
                        <i class="bi bi-house-door me-2"></i>Manage Properties
                    </a>
                </div>

                <div class="col-md-3 mb-3">
                    <a asp-action="Appointments" asp-controller="Admin" class="btn btn-admin-outline w-100">
                        <i class="bi bi-calendar-check me-2"></i>View Appointments
                    </a>
                </div>

                <div class="col-md-3 mb-3">
                    <a asp-action="Employees" asp-controller="Admin" class="btn btn-admin-outline w-100">
                        <i class="bi bi-briefcase me-2"></i>Manage Employees
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
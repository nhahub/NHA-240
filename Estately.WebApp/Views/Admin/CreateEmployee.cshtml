@model Estately.Services.ViewModels.EmployeeViewModel
@{
    ViewData["Title"] = "Create Employee";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="table-container">
    <h4>Create New Employee</h4>
    
    <form method="post" asp-action="CreateEmployee" asp-controller="Admin" class="mt-4">
        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
        
        <div class="row">
            <div class="col-md-6 mb-3">
                <label asp-for="FirstName" class="form-label"></label>
                <input asp-for="FirstName" class="form-control" />
                <span asp-validation-for="FirstName" class="text-danger"></span>
            </div>
            <div class="col-md-6 mb-3">
                <label asp-for="LastName" class="form-label"></label>
                <input asp-for="LastName" class="form-control" />
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>
        </div>

        <div class="row">
            <div class="col-md-4 mb-3">
                <label asp-for="UserID" class="form-label"></label>
                <select asp-for="UserID" asp-items="@(ViewBag.Users as SelectList)" class="form-select">
                    <option value="">-- Select User --</option>
                </select>
                <span asp-validation-for="UserID" class="text-danger"></span>
            </div>
            <div class="col-md-4 mb-3">
                <label asp-for="BranchDepartmentId" class="form-label"></label>
                <select asp-for="BranchDepartmentId" asp-items="@(ViewBag.BranchDepartments as SelectList)" class="form-select">
                    <option value="">-- Select Branch Department --</option>
                </select>
                <span asp-validation-for="BranchDepartmentId" class="text-danger"></span>
            </div>
            <div class="col-md-4 mb-3">
                <label asp-for="JobTitleId" class="form-label"></label>
                <select asp-for="JobTitleId" asp-items="@(ViewBag.JobTitles as SelectList)" class="form-select">
                    <option value="">-- Select Job Title --</option>
                </select>
                <span asp-validation-for="JobTitleId" class="text-danger"></span>
            </div>
        </div>

        <div class="row">
            <div class="col-md-6 mb-3">
                <label asp-for="ReportsTo" class="form-label"></label>
                <select asp-for="ReportsTo" asp-items="@(ViewBag.ReportsToEmployees as SelectList)" class="form-select">
                    <option value="">-- Select Manager --</option>
                </select>
                <span asp-validation-for="ReportsTo" class="text-danger"></span>
            </div>
        </div>

        <div class="row">
            <div class="col-md-4 mb-3">
                <label asp-for="Gender" class="form-label"></label>
                <input asp-for="Gender" class="form-control" />
                <span asp-validation-for="Gender" class="text-danger"></span>
            </div>
            <div class="col-md-4 mb-3">
                <label asp-for="Age" class="form-label"></label>
                <input asp-for="Age" class="form-control" />
                <span asp-validation-for="Age" class="text-danger"></span>
            </div>
            <div class="col-md-4 mb-3">
                <label asp-for="Phone" class="form-label"></label>
                <input asp-for="Phone" class="form-control" />
                <span asp-validation-for="Phone" class="text-danger"></span>
            </div>
        </div>

        <div class="row">
            <div class="col-md-6 mb-3">
                <label asp-for="Nationalid" class="form-label"></label>
                <input asp-for="Nationalid" class="form-control" />
                <span asp-validation-for="Nationalid" class="text-danger"></span>
            </div>
            <div class="col-md-6 mb-3">
                <label asp-for="ProfilePhoto" class="form-label"></label>
                <input asp-for="ProfilePhoto" class="form-control" />
                <span asp-validation-for="ProfilePhoto" class="text-danger"></span>
            </div>
        </div>

        <div class="row">
            <div class="col-md-6 mb-3">
                <label asp-for="Salary" class="form-label"></label>
                <input asp-for="Salary" class="form-control" type="number" step="0.01" />
                <span asp-validation-for="Salary" class="text-danger"></span>
            </div>
            <div class="col-md-6 mb-3">
                <label asp-for="HireDate" class="form-label"></label>
                <input asp-for="HireDate" class="form-control" type="date" />
                <span asp-validation-for="HireDate" class="text-danger"></span>
            </div>
        </div>

        <div class="mt-4">
            <button type="submit" class="btn btn-admin me-2">Create Employee</button>
            <a asp-action="Employees" asp-controller="Admin" class="btn btn-admin-outline">Cancel</a>
        </div>
    </form>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}


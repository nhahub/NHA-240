@model Estately.Services.ViewModels.CityViewModel

@{
    ViewData["Title"] = "City Details";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="table-container">
    <h4>City Details</h4>

    <div class="details-table p-4">
        <table class="table table-bordered mb-0">
            <tr><th>City ID</th><td>@Model.CityID</td></tr>
            <tr><th>City Name</th><td>@Model.CityName</td></tr>
            <tr><th>Zone Count</th><td>@Model.ZoneCount</td></tr>
            <tr><th>Created At</th><td>@Model.CreatedAt?.ToString("yyyy-MM-dd")</td></tr>
        </table>

        <div class="mt-4">
            <a asp-action="Edit" asp-route-id="@Model.CityID" class="btn btn-admin">
                <i class="bi bi-pencil me-1"></i>Edit
            </a>
            <a asp-action="Index" class="btn btn-secondary ms-2">
                <i class="bi bi-arrow-left-circle me-1"></i>Back to List
            </a>
        </div>
    </div>
</div>
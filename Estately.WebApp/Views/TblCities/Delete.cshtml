@model Estately.Services.ViewModels.CityViewModel

@{
    ViewData["Title"] = "Delete City";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="table-container">
    <h4 class="text-danger">
        <i class="bi bi-exclamation-triangle me-2"></i> Delete City
    </h4>

    <div class="alert alert-danger">
        <strong>Are you sure you want to delete this city?</strong>
    </div>

    <div class="details-table mb-4 p-3">
        <table class="table table-bordered mb-0">
            <tr><th>City Name</th><td>@Model.CityName</td></tr>
            <tr><th>Created At</th><td>@Model.CreatedAt</td></tr>
            <tr><th>Zone Count</th><td>@Model.ZoneCount</td></tr>
        </table>
    </div>

    <form asp-action="Delete" method="post">
        <input type="hidden" asp-for="CityID" />

        <button type="submit" class="btn btn-delete">
            <i class="bi bi-trash me-2"></i>Delete
        </button>

        <a asp-action="Index" class="btn btn-secondary ms-2">
            <i class="bi bi-arrow-left-circle me-2"></i>Cancel
        </a>
    </form>
</div>
@model Estately.Services.ViewModels.CityListViewModel

@{
    ViewData["Title"] = "Cities Management";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h4>Cities</h4>
    <a asp-action="Create" class="btn btn-admin">
        <i class="bi bi-plus-circle me-2"></i>Add New City
    </a>
</div>

<form method="get" class="mb-4">
    <div class="row">
        <div class="col-md-10">
            <input type="text" name="search" class="form-control"
                   placeholder="Search city by name..."
                   value="@Model.SearchTerm" />
        </div>
        <div class="col-md-2">
            <button type="submit" class="btn btn-admin w-100">Search</button>
        </div>
    </div>
</form>

<table class="table table-striped table-hover">
    <thead>
        <tr>
            <th>City ID</th>
            <th>City Name</th>
            <th>Zone Count</th>
            <th>Created At</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var city in Model.Cities)
        {
            <tr>
                <td>@city.CityID</td>
                <td>@city.CityName</td>
                <td>@city.ZoneCount</td>
                <td>@city.CreatedAt?.ToString("yyyy-MM-dd")</td>

                <td>
                    <a asp-action="Edit" asp-route-id="@city.CityID" class="btn btn-edit btn-sm">Edit</a>
                    <a asp-action="Details" asp-route-id="@city.CityID" class="btn btn-details btn-sm">Details</a>

                    <form asp-action="Delete" asp-route-id="@city.CityID"
                          method="get" style="display:inline;">
                        <button class="btn btn-delete btn-sm">Delete</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>

@if (Model.TotalPages > 0)
{
    <div class="row">
        <div class="custom-pagination-container">
            <div class="custom-pagination">

                <!-- Prev -->
                @if (Model.Page > 1)
                {
                    <a asp-action="Index"
                       asp-route-page="@(Model.Page - 1)"
                       asp-route-pageSize="@Model.PageSize"
                       asp-route-search="@Model.SearchTerm"
                       class="page-btn">Prev</a>
                }
                else
                {
                    <span class="page-btn disabled">Prev</span>
                }

                <!-- Pages -->
                @for (int i = 1; i <= Model.TotalPages; i++)
                {
                    <a asp-action="Index"
                       asp-route-page="@i"
                       asp-route-pageSize="@Model.PageSize"
                       asp-route-search="@Model.SearchTerm"
                       class="page-btn @(i == Model.Page ? "active" : "")">@i</a>
                }

                <!-- Next -->
                @if (Model.Page < Model.TotalPages)
                {
                    <a asp-action="Index"
                       asp-route-page="@(Model.Page + 1)"
                       asp-route-pageSize="@Model.PageSize"
                       asp-route-search="@Model.SearchTerm"
                       class="page-btn">Next</a>
                }
                else
                {
                    <span class="page-btn disabled">Next</span>
                }

            </div>
        </div>
    </div>
}
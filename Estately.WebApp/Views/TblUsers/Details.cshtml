@model Estately.Services.ViewModels.UserViewModel

@{
    ViewData["Title"] = "User Details";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="table-container">
    <h4>User Details</h4>

    <div class="details-table p-4">
        <table class="table table-bordered mb-0">
            <tr><th>User ID</th><td>@Model.UserID</td></tr>
            <tr><th>Email</th><td>@Model.Email</td></tr>
            <tr><th>Username</th><td>@Model.Username</td></tr>
            <tr><th>User Type</th><td>@Model.UserTypeName</td></tr>
            <tr><th>Created At</th><td>@Model.CreatedAt?.ToString("yyyy-MM-dd")</td></tr>
        </table>

        <div class="mt-4">
            <a asp-action="Edit" asp-route-id="@Model.UserID" class="btn btn-admin">
                <i class="bi bi-pencil me-1"></i>Edit
            </a>
            <a asp-action="Index" class="btn btn-secondary ms-2">
                <i class="bi bi-arrow-left-circle me-1"></i>Back to List
            </a>
        </div>
    </div>
</div>

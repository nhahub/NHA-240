@model Estately.Services.ViewModels.UserViewModel

@{
    ViewData["Title"] = "Edit User";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="table-container">
    <h4>Edit User</h4>

    <form asp-action="Edit" method="post" class="mt-4">

        <input type="hidden" asp-for="UserID" />

        <div class="mb-3">
            <label class="form-label">Email</label>
            <input asp-for="Email" class="form-control" disabled />
        </div>

        <div class="mb-3">
            <label class="form-label">Username</label>
            <input asp-for="Username" class="form-control" disabled />
        </div>

        <div class="mb-3">
            <label class="form-label">User Type</label>
            <select asp-for="UserTypeID" class="form-control" asp-items="ViewBag.UserTypes"></select>
        </div>

        <div class="form-check mb-2">
            <input asp-for="IsEmployee" class="form-check-input" />
            <label class="form-check-label">Is Employee</label>
        </div>

        <div class="form-check mb-2">
            <input asp-for="IsClient" class="form-check-input" />
            <label class="form-check-label">Is Client</label>
        </div>

        <div class="form-check mb-2">
            <input asp-for="IsDeveloper" class="form-check-input" />
            <label class="form-check-label">Is Developer</label>
        </div>

        <div class="mt-4">
            <button class="btn btn-admin">
                <i class="bi bi-save me-2"></i>Save Changes
            </button>
            <a asp-action="Index" class="btn btn-secondary">
                <i class="bi bi-arrow-left-circle me-2"></i>Back to List
            </a>
        </div>

    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

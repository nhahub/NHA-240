@model Estately.Services.ViewModels.PropertyListViewModel

@{
    ViewData["Title"] = "Properties Management";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="table-container">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h4>Properties</h4>
        <a asp-action="Create" class="btn btn-admin">
            <i class="bi bi-plus-circle me-2"></i>Add New Property
        </a>
    </div>

    <form method="get" class="mb-4">
        <div class="row">
            <div class="col-md-10">
                <input type="text" name="search" class="form-control"
                       placeholder="Search by address, code, developer..."
                       value="@Model.SearchTerm" />
            </div>
            <div class="col-md-2">
                <button type="submit" class="btn btn-admin w-100">Search</button>
            </div>
        </div>
    </form>

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success">
            @TempData["Success"]
        </div>
    }

    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>Property ID</th>
                <th>Code</th>
                <th>Address</th>
                <th>Price</th>
                <th>Type</th>
                <th>Zone</th>
                <th>Developer</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var p in Model.Properties)
            {
                <tr>
                    <td>@p.PropertyID</td>
                    <td>@p.PropertyCode</td>
                    <td>@p.Address</td>
                    <td>@String.Format("{0:N2}", p.Price)</td>
                    <td>@p.PropertyTypeName</td>
                    <td>@p.ZoneName</td>
                    <td>@p.DeveloperTitle</td>
                    <td class="actions-cell">
                        <div class="action-buttons">
                            <a asp-action="Edit" asp-route-id="@p.PropertyID" class="btn btn-edit btn-sm">Edit</a>
                            <a asp-action="Details" asp-route-id="@p.PropertyID" class="btn btn-details btn-sm">Details</a>

                            <form asp-action="Delete"
                                  asp-route-id="@p.PropertyID"
                                  method="get">
                                <button class="btn btn-delete btn-sm">Delete</button>
                            </form>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

@if (Model.TotalPages > 0)
{
    <div class="row">
        <div class="custom-pagination-container">
            <div class="custom-pagination">

                <!-- Prev -->
                @if (Model.Page > 1)
                {
                    <a asp-action="Index"
                       asp-route-page="@(Model.Page - 1)"
                       asp-route-pageSize="@Model.PageSize"
                       asp-route-search="@Model.SearchTerm"
                       class="page-btn">Prev</a>
                }
                else
                {
                    <span class="page-btn disabled">Prev</span>
                }

                <!-- Pages -->
                @for (int i = 1; i <= Model.TotalPages; i++)
                {
                    <a asp-action="Index"
                       asp-route-page="@i"
                       asp-route-pageSize="@Model.PageSize"
                       asp-route-search="@Model.SearchTerm"
                       class="page-btn @(i == Model.Page ? "active" : "")">@i</a>
                }

                <!-- Next -->
                @if (Model.Page < Model.TotalPages)
                {
                    <a asp-action="Index"
                       asp-route-page="@(Model.Page + 1)"
                       asp-route-pageSize="@Model.PageSize"
                       asp-route-search="@Model.SearchTerm"
                       class="page-btn">Next</a>
                }
                else
                {
                    <span class="page-btn disabled">Next</span>
                }

            </div>
        </div>
    </div>
}
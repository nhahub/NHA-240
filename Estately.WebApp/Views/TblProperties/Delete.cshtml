@model Estately.Services.ViewModels.PropertyViewModel

@{
    ViewData["Title"] = "Delete Property";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="table-container">
    <h4 class="text-danger">
        <i class="bi bi-exclamation-triangle me-2"></i> Delete Property
    </h4>

    <div class="alert alert-danger">
        <strong>Are you sure you want to delete this property?</strong>
    </div>

    <div class="details-table mb-4 p-3">
        <table class="table table-bordered mb-0">
            <tr><th>Property Code</th><td>@Model.PropertyCode</td></tr>
            <tr><th>Address</th><td>@Model.Address</td></tr>
            <tr><th>Price</th><td>@String.Format("{0:N2}", Model.Price)</td></tr>
            <tr><th>Zone</th><td>@Model.ZoneName</td></tr>
        </table>
    </div>

    <form asp-action="Delete" method="post">
        <input type="hidden" asp-for="PropertyID" />

        <button type="submit" class="btn btn-delete">
            <i class="bi bi-trash me-2"></i>Delete
        </button>

        <a asp-action="Index" class="btn btn-secondary ms-2">
            <i class="bi bi-arrow-left-circle me-2"></i>Cancel
        </a>
    </form>
</div>
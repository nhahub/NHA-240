@model Estately.Services.ViewModels.PropertyViewModel

@{
    ViewData["Title"] = "Property Details";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<style>
    .gallery-grid {
        display: flex;
        gap: 10px;
        flex-wrap: wrap;
    }

    .gallery-item {
        display: block;
        width: 140px;
        height: 100px;
        overflow: hidden;
        border-radius: 6px;
        border: 1px solid #e1e1e1;
    }

        .gallery-item img {
            width: 100%;
            height: 100%;
            object-fit: cover;
        }
</style>

<div class="table-container">
    <h4>Property Details</h4>

    <div class="details-table p-4">
        <table class="table table-bordered mb-3">
            <tr><th>Property ID</th><td>@Model.PropertyID</td></tr>
            <tr><th>Property Code</th><td>@Model.PropertyCode</td></tr>
            <tr><th>Address</th><td>@Model.Address</td></tr>
            <tr><th>Price</th><td>@String.Format("{0:N2}", Model.Price)</td></tr>
            <tr><th>Area</th><td>@Model.Area</td></tr>
            <tr><th>Type</th><td>@Model.PropertyTypeName</td></tr>
            <tr><th>Status</th><td>@Model.StatusName</td></tr>
            <tr><th>Zone</th><td>@Model.ZoneName</td></tr>
            <tr><th>Agent</th><td>@Model.AgentName</td></tr>
            <tr>
                <th>Features</th>
                <td>
                    @if (Model.SelectedFeatures != null && Model.AllFeatures != null)
                    {
                        var names = Model.AllFeatures.Where(f => Model.SelectedFeatures.Contains(f.FeatureID)).Select(f => f.FeatureName);
                        @string.Join(", ", names)
                    }
                </td>
            </tr>
        </table>

        <h5>Images</h5>
        <div class="gallery-grid mb-3">
            @if (Model.Images != null && Model.Images.Count > 0)
            {
                foreach (var img in Model.Images)
                {
                    <a href="~/@img.ImagePath" target="_blank" class="gallery-item">
                        <img src="~/@img.ImagePath" alt="image-@img.ImageID" />
                    </a>
                }
            }
            else
            {
                <div class="text-muted">No images available.</div>
            }
        </div>

        <div class="mt-4">
            <a asp-action="Edit" asp-route-id="@Model.PropertyID" class="btn btn-admin">
                <i class="bi bi-pencil me-1"></i>Edit
            </a>
            <a asp-action="Index" class="btn btn-secondary ms-2">
                <i class="bi bi-arrow-left-circle me-1"></i>Back to List
            </a>
        </div>
    </div>
</div>
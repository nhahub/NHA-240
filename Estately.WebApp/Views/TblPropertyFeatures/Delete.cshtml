@model Estately.Services.ViewModels.PropertyFeatureViewModel

@{
    ViewData["Title"] = "Delete Property Feature";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="table-container">
    <h4 class="text-danger">
        <i class="bi bi-exclamation-triangle me-2"></i> Delete Property Feature
    </h4>

    <div class="alert alert-danger">
        Are you sure you want to delete this feature?
    </div>

    <table class="table table-bordered">
        <tr>
            <th>Feature ID</th>
            <td>@Model.FeatureID</td>
        </tr>
        <tr>
            <th>Feature Name</th>
            <td>@Model.FeatureName</td>
        </tr>
        <tr>
            <th>Description</th>
            <td>@Model.Description</td>
        </tr>
        <tr>
            <th>Is Amenity</th>
            <td>@(Model.IsAmenity == true ? "Yes" : "No")</td>
        </tr>
        <tr>
            <th>Created At</th>
            <td>@(Model.CreatedAt?.ToString("yyyy-MM-dd") ?? "-")</td>
        </tr>
    </table>

    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger">
            @TempData["Error"]
        </div>
    }

    <form asp-action="Delete" method="post">
        <input type="hidden" asp-for="FeatureID" />
        <button class="btn btn-danger bi bi-trash">Delete</button>
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </form>
</div>

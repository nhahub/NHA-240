@model Estately.Services.ViewModels.ZonesViewModel

@{
    ViewData["Title"] = "Edit Zone";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="table-container">
    <h4>Edit Zone</h4>

    <form asp-action="Edit" method="post" class="mt-4">

        <input type="hidden" asp-for="ZoneId" />

        <div class="mb-3">
            <label class="form-label">City</label>
            <select asp-for="CityId" class="form-control" asp-items="ViewBag.City"></select>
        </div>

        <div class="mb-3">
            <label class="form-label">Zone Name</label>
            <input asp-for="ZoneName" class="form-control" />
            <span asp-validation-for="ZoneName" class="text-danger"></span>
        </div>

        <div class="mt-4">
            <button class="btn btn-admin">
                <i class="bi bi-save me-2"></i>Save Changes
            </button>

            <a asp-action="Index" class="btn btn-secondary">
                <i class="bi bi-arrow-left-circle me-2"></i>Back to List
            </a>
        </div>

    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

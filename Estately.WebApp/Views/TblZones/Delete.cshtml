@model Estately.Services.ViewModels.ZonesViewModel

@{
    ViewData["Title"] = "Delete Zone";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="table-container">
    <h4 class="text-danger">
        <i class="bi bi-exclamation-triangle me-2"></i> Delete Zone
    </h4>

    <div class="alert alert-danger">
        <strong>Are you sure you want to delete this zone?</strong>
    </div>

    <div class="details-table mb-4 p-3">
        <table class="table table-bordered mb-0">
            <tr><th>Zone Name</th><td>@Model.ZoneName</td></tr>
            <tr><th>City</th><td>@Model.City</td></tr>
        </table>
    </div>

    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger">@TempData["Error"]</div>
    }

    <form asp-action="Delete" method="post">
        <input type="hidden" asp-for="ZoneId" />

        <button type="submit" class="btn btn-delete">
            <i class="bi bi-trash me-2"></i>Delete
        </button>

        <a asp-action="Index" class="btn btn-secondary ms-2">
            <i class="bi bi-arrow-left-circle me-2"></i>Cancel
        </a>
    </form>
</div>

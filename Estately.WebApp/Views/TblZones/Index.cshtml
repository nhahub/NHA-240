@model Estately.Services.ViewModels.ZonesListViewModel

@{
    ViewData["Title"] = "Zones Management";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="table-container">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h4>Zones</h4>
        <a asp-action="Create" class="btn btn-admin">
            <i class="bi bi-plus-circle me-2"></i>Add New Zone
        </a>
    </div>

    <form method="get" class="mb-4">
        <div class="row">
            <div class="col-md-10">
                <input type="text" name="search" class="form-control"
                       placeholder="Search zones..."
                       value="@Model.SearchTerm" />
            </div>
            <div class="col-md-2">
                <button type="submit" class="btn btn-admin w-100">Search</button>
            </div>
        </div>
    </form>

    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>Zone ID</th>
                <th>Zone Name</th>
                <th>City</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var zone in Model.Zones)
            {
                <tr>
                    <td>@zone.ZoneId</td>
                    <td>@zone.ZoneName</td>
                    <td>@zone.City</td>

                    <td>
                        <a asp-action="Edit" asp-route-id="@zone.ZoneId" class="btn btn-edit btn-sm">Edit</a>
                        <a asp-action="Details" asp-route-id="@zone.ZoneId" class="btn btn-details btn-sm">Details</a>

                        <form asp-action="Delete" asp-route-id="@zone.ZoneId"
                              method="get" style="display:inline;">
                            <button class="btn btn-delete btn-sm">Delete</button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

@if (Model.TotalPages > 1)
{
    <div class="row">
        <div class="custom-pagination-container">
            <div class="custom-pagination">

                @if (Model.Page > 1)
                {
                    <a asp-action="Index"
                       asp-route-page="@(Model.Page - 1)"
                       asp-route-pageSize="@Model.PageSize"
                       asp-route-search="@Model.SearchTerm"
                       class="page-btn">Prev</a>
                }
                else
                {
                    <span class="page-btn disabled">Prev</span>
                }

                @for (int i = 1; i <= Model.TotalPages; i++)
                {
                    <a asp-action="Index"
                       asp-route-page="@i"
                       asp-route-pageSize="@Model.PageSize"
                       asp-route-search="@Model.SearchTerm"
                       class="page-btn @(i == Model.Page ? "active" : "")">@i</a>
                }

                @if (Model.Page < Model.TotalPages)
                {
                    <a asp-action="Index"
                       asp-route-page="@(Model.Page + 1)"
                       asp-route-pageSize="@Model.PageSize"
                       asp-route-search="@Model.SearchTerm"
                       class="page-btn">Next</a>
                }
                else
                {
                    <span class="page-btn disabled">Next</span>
                }

            </div>
        </div>
    </div>
}

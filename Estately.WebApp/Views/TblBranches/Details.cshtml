@model Estately.Services.ViewModels.BranchViewModel

@{
    ViewData["Title"] = "Branch Details";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="table-container">
    <h3 class="mb-3">
        <i class="bi bi-building me-2"></i> Branch Details
    </h3>

    <table class="table table-bordered">
        <tr><th>Branch ID</th><td>@Model.BranchID</td></tr>
        <tr><th>Branch Name</th><td>@Model.BranchName</td></tr>
        <tr><th>Manager Name</th><td>@(Model.ManagerName ?? "N/A")</td></tr>
        <tr><th>Address</th><td>@(Model.Address ?? "N/A")</td></tr>
        <tr><th>Phone</th><td>@(Model.Phone ?? "N/A")</td></tr>

        <tr>
            <th>Status</th>
            <td>
                @if (Model.IsDeleted == true)
                {
                    <span class="badge bg-danger">Inactive</span>
                }
                else
                {
                    <span class="badge bg-success">Active</span>
                }
            </td>
        </tr>
    </table>

    <a asp-action="Edit" asp-route-id="@Model.BranchID" class="btn btn-warning">
        <i class="bi bi-pencil-square me-1"></i> Edit
    </a>

    <a asp-action="Index" class="btn btn-secondary ms-2">
        <i class="bi bi-arrow-left-circle me-1"></i> Back to List
    </a>
</div>
